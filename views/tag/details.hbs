<div class="container body-content">
    <h1>Searching by tag - {{ tag.name }}</h1>
    <div class="row">
        {{#each articles}}
            <div class="col-md-6">
                <article>
                    <header>
                        <h2>{{ this.article }}</h2>
                    </header>
                </article>
                <p>{{ this.content }}</p>
                <p>
                    {{#each this.tags}}
                        <a class="btn btn-default btn-xs" href="/tag/{{ this.name }}">{{ this.name }}</a>
                    {{/each}}
                </p>
                <span class="author">
                    {{ article.author.fullName }}
                </span>
                <footer>
                    <div class="pull-right">
                        <a class="btn btn-default btn-xs" href="/article/details/{{this.id}}">Read mode &raquo;</a>
                    </div>
                </footer>
            </div>
        {{/each}}
    </div>
</div>